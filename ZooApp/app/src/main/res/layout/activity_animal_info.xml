<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="@color/gray"
        tools:context=".MainActivity" android:padding="8dp">

    <LinearLayout
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal" android:baselineAligned="false" android:layout_gravity="center">

        <ImageView

                android:layout_width="80dp"
                android:layout_height="160dp"
                android:src="@drawable/baboon" android:id="@+id/ivName"/>

        <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="24sp" android:id="@+id/txtTitle"/>

            <TextView
                    android:text="Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtDesc"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>